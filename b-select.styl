smoothing()
  -webkit-font-smoothing: antialiased;

/* Overthrow CSS:
   Enable overflow: auto on elements with overthrow class when html element has overthrow class too */
.overthrow-enabled .overthrow
  overflow: auto;
  -webkit-overflow-scrolling: touch;

select.b-select
  position: absolute;
  clip: rect(0,0,0,0);

.b-select
  display: block;
  box-sizing: border-box;
  margin-top: 7px;
  margin-bottom: 7px;
  border: 1px solid #d4d7c9;
  border-radius: 3px;
  background-color: #fff;
  box-shadow: inset 0 1px 2px rgba(0,0,0,0.26);
  color: #191919;
  text-align: left;
  font-size: 13px;
  smoothing();

  &:focus
    outline: 0;

  a
    text-decoration: none;
    cursor: pointer;

.b-select__toggle {
  display: block;
  padding: 12px 13px;
  border: 1px solid #ccc;
  border-radius: 3px;
  color: #333;
  font-size: 15px;
  transition: border-color 0.5s;
}
.b-select__toggle:after{
  position: absolute;
  top: 0;
  right: 0;
  display: block;
  width: 25px;
  height: 100%;
  background-image: url('b-select__arrow.png');
  background-position: center center;
  background-repeat: no-repeat;
  content: "";
}
