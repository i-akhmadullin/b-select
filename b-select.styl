smoothing()
  -webkit-font-smoothing: antialiased;

$br = 4px;
$textColor = #191919;

/* Overthrow CSS:
   Enable overflow: auto on elements with overthrow class when html element has overthrow class too */
.overthrow-enabled .overthrow
  overflow: auto;
  -webkit-overflow-scrolling: touch;

select.b-select
  position: absolute;
  clip: rect(0,0,0,0);

.b-select
  position: relative;
  box-sizing: border-box;
  margin-top: 7px;
  margin-bottom: 7px;
  border: 1px solid #d4d7c9;
  border-radius: $br;
  background-color: #fff;
  box-shadow: inset 0 1px 2px rgba(0,0,0,0.26);
  color: $textColor;
  text-align: left;
  font-size: 13px;
  display inline-block;
  smoothing();

  &:focus
    outline: 0;

  a
    outline: 0;
    text-decoration: none;
    white-space: nowrap;
    cursor: pointer;

  &__toggle
    position: relative;
    display: block;
    box-sizing: border-box;
    padding: 11px 25px 10px 13px;
    border: 1px solid #ccc;
    border-radius: $br;
    color: #333;
    font-size: 15px;
    transition: border-color 0.5s;
  &__toggle:after
    position: absolute;
    top: 18px;
    right: 0;
    display: block;
    width: 28px;
    height: 100%;
    color: #b4b4b4;
    content: "â–¼";
    text-align: center;
    font-size: 9px;
  // &__toggle:hover
  //   border-color: #8c8c8c;
  // &_focus &__toggle
  //   border-color: #40b5e2;

  &_focus &__toggle
    box-shadow: 0 0 5px #40b5e2;

  &_open
    position: relative;
    box-shadow: 0 0 5px #40b5e2;
    z-index: 10;
  &_open &__toggle
    display: block;
    border-radius: $br $br 0 0;
    // border-color: #8c8c8c;
    // background-color: #ececec;
    // box-shadow: inset 0 -2px 5px #ccc;
    // color: #ccc;
  &_open &__options
    display: block;

  &__options
    position: absolute;
    right: 0;
    display: none;
    margin-top: -1px;
    width: 100%;
    border-radius: 0 0 $br $br;
    background-color: #fff;
    box-shadow: 0 2px 8px rgba(0, 0, 0, .2), inset 0 -10px 14px -10px rgba(0,0,0,0.3);
  &__options a
    display: block;
    padding: 6px 15px;
    text-decoration: underline;

  &__options-inner
    position: relative;
    overflow: auto;
    margin: 0;
    padding: 0;
    max-height: 400px;
    border-right: 1px solid #d4d7c9;
    border-bottom-width: 2px;
    border-bottom-color: #999;
    border-left: 1px solid #d4d7c9;
    border-radius: 0 0 $br $br;
    color: #333;
  &__options-inner li
    display: block;
  &__options li:last-child a
    border-bottom: none;

  &__options a:hover,
  &__option_current a
    color: lighten($textColor, 30%);
    text-decoration: none;
    // border-bottom-color: #004c72;
    // background-color: #0084c7;
  &__options &__option_disabled,
  &__options &__option_disabled a,
  &__option_current a
    cursor: default;
    text-decoration: none;
  &__options &__option_disabled a
  &__options &__option_disabled a:hover
  &__options &__option_disabled:hover a
    color: lighten($textColor, 70%);
    cursor: default;
