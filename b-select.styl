.b-select_open {
  box-shadow: 0 0 5px #40b5e2;
  z-index: 10;
}
.b-select_open .b-select__toggle {
  // border-color: #8c8c8c;
  border-radius: 3px 3px 0 0;
  // background-color: #ececec;
  // box-shadow: inset 0 -2px 5px #ccc;
  // color: #ccc;
  display: block;
}
.b-select__options {
  border-radius: 0 0 5px 5px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, .2), inset 0 -10px 14px -10px rgba(0,0,0,0.3);
  background-color: #fff;
}
.b-select__options a {
  padding: 6px 15px;
  text-decoration: underline;
}
.b-select__options li:last-child a {
  border-bottom: none;
}
.b-select__options a:hover,
.b-select__option_current a {
  // border-bottom-color: #004c72;
  // background-color: #0084c7;
  color: gray;
  text-decoration: none;
}
.b-select__option_current a,
.b-select__options .disabled {
  cursor: default;
}
.b-select__options .disabled:hover {
  border-bottom-color: #999;
  background-color: #fff;
  cursor: default;
}
.b-select__options-inner {
  max-height: 400px;
  border-right: 1px solid #d4d7c9;
  border-bottom-width: 2px;
  border-bottom-color: #999;
  border-left: 1px solid #d4d7c9;
  border-radius: 0 0 5px 5px;
  color: #333;
}

/******  End Theme ******/

.b-select {
  position: relative;
  display inline-block;
}
.b-select a {
  outline: 0;
}
.b-select__toggle {
  position: relative;
  display: block;
}
.b-select_open {
  position: relative;
}
.b-select_open .b-select__options {
  display: block;
}
.b-select_open .b-select__label {
  color: inherit;
}
.b-select__options {
  position: absolute;
  right: 0;
  display: none;
  margin-top: -1px;
  width: 100%;
}
.b-select__options a,
.b-select__options a:link,
.b-select__options a:visited {
  display: block;
}
.b-select__options-inner {
  position: relative;
  overflow: auto;
}